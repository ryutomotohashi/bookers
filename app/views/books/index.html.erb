<h1>
  <strong>
    Books
  </strong>
</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<tbody>
<% @books.each do |book| %>
  <tr>
    <tb><%= book.title %></tb>
    <tb><%= book.body %></tb>
    <tb><%= link_to "Show", book_path(book.id)%></tb>
    <tb><%= link_to "Edit", book_edit_path(book.id) %></tb>
    <tb><%= link_to "Destroy", %></tb>
  </tr>
</tbody>
<% end %>

<h2>
  <strong>New book</strong>
</h2>

<%= form_with model: @book, url: '/books', method: :post, local: true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>


  <%= f.submit"Create Book" %>

<% end %>