<h1>
  <strong>Editing Book</strong>
</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="form">
<%= form_with model: @book,url: update_book_path(@book.id), method: :patch, local: true do |f| %>
    <div class ="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    
    <div class ="field">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    
    <div class="action"><%= f.submit'Update Book' %></div>

<% end %>
</div>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", "/books" %>


